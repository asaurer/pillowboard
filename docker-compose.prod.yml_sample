version: '3'
services:
  dashboard:
    image: jerben/dashboard
    environment:
      - DATABASE_URL=http://docstore:5984/db
      - DATABASE_USER=couchdb
      - DATABASE_PASSWORD=couchdb
      - HTTP_PORT=3000
      - ENV=PRODUCTION
    ports:
      - 3000:3000
    depends_on:
      - docstore
    command: ["./wait-for-it.sh", "docstore:5984", "-t", "30", "--", "java", "-jar", "dashboard-standalone.jar"]
  docstore:
    image: couchdb:2.1.1
    ports:
      - 5984:5984
  db:
    image: postgres:10
    restart: always
  web:
    image: jerben/web
    environment:
      - DB_HOST=db
      - RAILS_ENV=production
    entrypoint: ["/myapp/app/lib/docker-entrypoint.sh"]
    command: bundle exec rails s -p 3001 -b '0.0.0.0'
    ports:
      - 3001:3001
    depends_on:
      - db
  router:
    image: jerben/router
    ports:
      - 80:8080
    command: ["./wait-for-it.sh", "web:3001", "-t", "30", "--", "nginx", "-g", "daemon off;"]
    depends_on:
      - dashboard
      - web

